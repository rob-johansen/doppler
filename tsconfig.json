{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "noEmit": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "node_modules"
  ]
}
